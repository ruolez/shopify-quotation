{
  "name": "@shopify/dev-mcp",
  "version": "1.4.1",
  "main": "dist/index.js",
  "author": "",
  "license": "ISC",
  "description": "A command line tool for setting up Shopify Dev MCP server",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.4",
    "@shopify/theme-check-common": "^3.20.0",
    "@shopify/theme-check-docs-updater": "^3.20.0",
    "@shopify/theme-check-node": "^3.20.0",
    "env-paths": "^3.0.0",
    "graphql": "^16.11.0",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/graphql": "^14.2.3",
    "@types/node": "^22.13.10",
    "@vitest/coverage-v8": "^3.0.9",
    "prettier": "^3.5.3",
    "typescript": "^5.8.2",
    "vite": "^6.3.5",
    "vitest": "^3.0.9",
    "@shopify/shopify-dev-tools": "1.1.0"
  },
  "type": "module",
  "bin": {
    "shopify-dev-mcp": "dist/index.js"
  },
  "files": [
    "dist/**/*.js",
    "!dist/**/*.test.*",
    "dist/data/latest-releases-schemas.json",
    "dist/data/**/*.json.gz",
    "LICENSE",
    "README.md",
    "package.json"
  ],
  "keywords": [
    "mcp",
    "modelcontextprotocol",
    "shopify"
  ],
  "prettier": {
    "endOfLine": "auto"
  },
  "private": false,
  "publishConfig": {
    "access": "public",
    "@shopify:registry": "https://registry.npmjs.org"
  },
  "scripts": {
    "build": "vite build && chmod +x dist/index.js",
    "build:watch": "vite watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint:fix": "prettier --write --ignore-unknown .",
    "lint": "prettier --check --cache --ignore-unknown .",
    "typecheck": "tsc --noEmit",
    "inspector": "npx @modelcontextprotocol/inspector dist/index.js"
  }
}